{
  "name": "Arctic",
  "version": "1.0.0",
  "description": "Installs and runs frontend dependencies. It has also some handy npm scripts for deployment",
  "main": "gulpfile.js",
  "devDependencies": {
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-load-plugins": "^1.1.0",
    "gulp-sass": "^2.1.0"
  },
  "scripts": {
    "clean:tools": "rm -rf ./node_modules",
